<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/ad_box_img"
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_centerHorizontal="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/tv_ad_box_title"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/tv_ad_box_title"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ad_box_img"
                app:layout_constraintTop_toTopOf="@+id/ad_box_img"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_ad_box_location_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/location"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/ad_box_img"
                app:layout_constraintTop_toBottomOf="@+id/tv_ad_box_title"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_ad_box_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_ad_box_location"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_ad_box_location_string"
                app:layout_constraintStart_toEndOf="@+id/tv_ad_box_location_string"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/tv_ad_box_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/rs"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_ad_box_location_string"
                app:layout_constraintTop_toBottomOf="@+id/tv_ad_box_location_string"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/tv_ad_box_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_ad_box_rs"
                app:layout_constraintStart_toEndOf="@+id/tv_ad_box_rs" />

            <ImageView
                android:id="@+id/btn_delete_ad"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_delete_forever_24"
                android:layout_marginRight="8dp"
                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/btn_chanege_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/change_button"
                android:text="@string/btn_change_details"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/btn_delete_ad"
                app:layout_constraintEnd_toStartOf="@+id/btn_delete_ad"
                app:layout_constraintTop_toTopOf="@+id/btn_delete_ad"
                android:layout_marginRight="16dp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/ad_box_img"
                app:layout_constraintEnd_toEndOf="@+id/ad_box_img"
                app:layout_constraintStart_toStartOf="@+id/ad_box_img"
                app:layout_constraintTop_toTopOf="@+id/ad_box_img" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>